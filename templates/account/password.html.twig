{% extends 'base.html.twig' %}

{% block title %}Modification mot de passe | Make it Myself !{% endblock %}

{% block content %}
    <h1>Modifier mon mot de passe</h1>
        <div id="change_password">
            <p>{{ app.user.firstname }}, définissez votre nouveau mot de passe :</p>
            {{ form(form) }}
            {% if message %}
                <div class="alert alert-info">{{ message }}</div>
            {% endif %}
            <a href="{{ path('account') }}">Retourner à mon compte</a>
        </div>
{% endblock %}
