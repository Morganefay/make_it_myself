        <link href="{{ asset('assets/css/style.css') }}" rel="stylesheet">
        <link href="{{ asset('assets/css/carousel.css') }}" rel="stylesheet">
        <link href="{{ asset('assets/css/forms.css') }}" rel="stylesheet">
        <link href="{{ asset('assets/css/message.css') }}" rel="stylesheet">
    {% endblock %}
</head>

<body>

<nav    {% if block('banner') is not defined %}style="margin-bottom: 15px" {% endif %}>
    <div class="logo">
        <h4>Make it myself</h4>
    </div>
    <ul class="nav-links">
        <li><a href="{{ path('home') }}">Accueil</a></li>
        <li><a href="{{ path( 'blog') }}">Blog</a></li>
        <li><a href="{{ path( 'forum') }}">Forum</a></li>
        <li><a href="{{ path( 'about') }}">A propos</a></li>
        <li><a href="{{ path( 'account') }}">Mon Compte</a></li>
        <li>
                {% if app.user %}
                    <a href="{{ path('account') }}">{{ app.user.firstname }}</a> | <a href="{{ path('app_logout') }}">Déconnexion</a>
                {% else %}
                    <a href="{{ path('app_login') }}">Connexion</a> | <a href="{{ path('register') }}">Inscription</a>
                {% endif %}

        </li>
    </ul>
    <div class="burger">
        <div class="line1"></div>
        <div class="line2"></div>
        <div class="line3"></div>
    </div>
</nav>

